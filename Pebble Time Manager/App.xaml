        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FF0088FF"/>
        <x:Double x:Key="ListviewItemHeaderSize">20</x:Double>
        <x:Double x:Key="ListviewItemSubSize">15</x:Double>
        <SolidColorBrush x:Key="ListviewItemFontColor" Color="White"/>
        <SolidColorBrush x:Key="ListviewItemSubFontColor" Color="#A0FFFFFF"/>

        <DataTemplate x:Key="WatchItem" x:Name="dtWatchItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Source="{Binding Image}" Width="40" Height="40"                        
                        />
                <SymbolIcon  Grid.Column="0"
                             Margin="-5,0,0,0"
                             Symbol="Favorite"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Left"
                             Opacity="0.8"
                             Foreground="Yellow"
                             Visibility="{Binding Active, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding Name}"
                                   VerticalAlignment="Center"
                                   Margin="9.5,0,0,0" FontSize="{StaticResource ListviewItemHeaderSize}" Foreground="{StaticResource ListviewItemFontColor}"
                                    >
                    </TextBlock>
                    <TextBlock Text="{Binding Developer}"
                                   VerticalAlignment="Center"
                                   Margin="9.5,0,0,6.5" FontSize="{StaticResource ListviewItemSubSize}" Foreground="{StaticResource ListviewItemSubFontColor}"
                                    >
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">

                    <Button Grid.Column="2" 
                            RequestedTheme="Dark"
                            Margin="2,0,2,0"
                            Visibility="{Binding UpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Command="{Binding UpdateCommand}">
                        <Grid>
                            <SymbolIcon 
                        Symbol="Download" 
                        Visibility="{Binding Updating, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=XOR}"
                        />
                            <ProgressRing 
                        Background="{x:Null}" 
                        Foreground="White"
                        IsActive="{Binding Updating}"
                        Visibility="{Binding Updating, Converter={StaticResource BooleanToVisibilityConverter}}"
                        />
                        </Grid>
                    </Button>
                    
                    <Button Grid.Column="2" RequestedTheme="Dark"
                            Margin="2,0,2,0"
                            Visibility="{Binding Configurable, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Command="{Binding ConfigureCommand}">
                    <Grid>
                    <SymbolIcon 
                        Symbol="Setting" 
                        Visibility="{Binding Configuring, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=XOR}"
                        />
                    <ProgressRing 
                        Background="{x:Null}" 
                        Foreground="White"
                        IsActive="{Binding Configuring}"
                        Visibility="{Binding Configuring, Converter={StaticResource BooleanToVisibilityConverter}}"
                        />
                    </Grid>
                </Button>


                </StackPanel>

                <!--<SymbolIcon  Grid.Column="3"
                                 Margin="0,0,40,0"
                                 Symbol="Favorite"
                                 VerticalAlignment="Center"
                                 Visibility="{Binding Active, Converter={StaticResource BooleanToVisibilityConverter}}"/>-->

            </Grid>
        </DataTemplate>

    </Application.Resources>

</Application>
